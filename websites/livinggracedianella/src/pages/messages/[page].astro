---
import { BaseLayout } from '@rkn/base-components'
import {
  Header,
  strapiAsset,
  FeatureMessage,
  fetchPageData,
  site,
} from '@rkn/page-components'
//deliberately not filtered by site as all messages should be applicable to living grace.
export async function getStaticPaths() {
  const pages = await fetch(`${import.meta.env.STRAPI_HOST}/api/sermons`).then(
    (res) => res.json()
  )
  return pages.data.map((page) => ({ params: { page: page.attributes.slug } }))
}
const { page } = Astro.params
const pageData = await fetchPageData(`/api/sermons`, {
  filters: {
    slug: {
      $eq: page,
    },
  },
  populate: [
    'feature_image',
    'feature_image.image',
    'soundcloud_recording',
    'providers',
  ],
})
const message = pageData.data[0].attributes
const header = message?.header ?? { header_title: message.title }
const featureImage = message.featureImage
---

<BaseLayout title={message.title}>
  <div class="outer">
    <Header {...header} subtitle={message.caption} />
    <div class="inner">
      <FeatureMessage {message} />
    </div>
  </div>
</BaseLayout>
<style>
  div.outer {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }
  div.inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    max-width: 700px;
    flex-grow: 0;
    text-wrap: wrap;
  }
  div.flex-row {
    display: flex;
    gap: 50px;
    justify-content: center;
  }
  section {
    max-width: 700px;
    padding-bottom: 1rem;
  }
</style>

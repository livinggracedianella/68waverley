---
import AnchorageBaseLayout from '../layouts/AnchorageBaseLayout.astro'
import { BlockRenderer, fetchPageData } from '@rkn/page-components'

const pageData = await fetchPageData('/api/pages/1?populate=*')
const homepageContent = pageData.data.attributes.blocks
---

<AnchorageBaseLayout title="Styleguide">
  <div class="outer">
    <div class="inner">
      <h1>Homepage</h1>
      <BlockRenderer blocks={homepageContent} />
    </div>
  </div>
  <style>
    div.outer {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    div.inner {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      max-width: 700px;
    }
  </style>
</AnchorageBaseLayout>

---
import { BaseLayout } from '@rkn/base-components'
import {
  BlockRenderer,
  Header,
  fetchFilterPopulate,
  Grid,
  GridCard,
  fetchPageData,
  markedHelper,
} from '@rkn/page-components'

const pageData = await fetchFilterPopulate('/api/pages', 'find-me-a', [
  'header.headerImage',
  'blocks.image',
  'blocks.cardImage',
  'blocks.gatherings',
  'blocks.message',
  'blocks.message.featureImage',
  'blocks.message.featureImage.image',
  'blocks.message.soundcloudRecording',
  'blocks.message.profiles',
  'blocks.post',
  'blocks.post.profiles',
  'blocks.post.featureImage',
  'blocks.post.featureImage.image',
  'blocks.event',
  'blocks.event.featureImage',
  'blocks.event.featureImage.image',
  'blocks.profiles',
  'blocks.two-column',
  'blocks.backgroundColour',
])
const blocks = pageData.data[0].attributes.blocks
const header = pageData.data[0].attributes.header

const services = await fetchPageData('/api/services', { populate: [ 'profiles', 'backgroundColour' ] })
---

<BaseLayout title="Styleguide">
  <div class="outer">
    <Header {...header} />
    <BlockRenderer blocks={blocks} />
    <Grid>
      {
        services.data.map((service) => {
          const {
            name,
            shortDescription = '',
            oneLiner,
            profiles,
            slug,
            backgroundColour
          } = service.attributes
          console.log(service.attributes)
          return (
            <GridCard>
              <div class="container" style={`background: var(--${backgroundColour.colourPicker ?? 'var(--light)'})`}>
              <h2>
                <a href={`find-me-a/${slug}`}>{name}</a>
              </h2>
              <div class="text" set:html={markedHelper(oneLiner ?? '')} />
              </div>
            </GridCard>
          )
        })
      }
    </Grid>
  </div>
  <style>
    div.outer {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
    }
    div.container {
      height: 100%;
      width: 100%;
      padding: 1rem 32px;
    }
    h2, h2 a {
      color: white;
      margin: 0 0 1rem 0;
      font-size: var(--font-size-h3);
    }
    .text {
      color: white;
    }
  </style>
</BaseLayout>

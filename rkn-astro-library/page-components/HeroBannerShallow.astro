---
const { BackgroundImage, HeroText, Subtitle } = Astro.props;
const BackgroundImageMed = `${
    BackgroundImage.split(".").join("Med.") + " 915w"
}`;
const BackgroundImageLge = `${BackgroundImage} + "1920w"`;
---

<section>
    <picture>
        <source
            srcset={BackgroundImageMed}
            type="image/jpeg"
            media="(max-width:639px)"
        />
        <source
            srcset={BackgroundImageLge}
            type="image/jpeg"
            media="(min-width:640px)"
        />
        <img src={BackgroundImage} />
    </picture>
    <h1>{HeroText}</h1>
    <h3>{Subtitle}</h3>
    <slot />
</section>
<style>
    section {
        min-height: 33vh;
        max-height: max-content;
        position: relative;
        display: flex;
        align-items: center;
        flex-direction: column;
        padding-bottom: 2rem;
    }
    img {
        /*I learnt that object-fit requires width and height to be given...*/
        object-fit: cover;
        width: 100%;
        height: 100%;
        min-height: 33vh;
        position: absolute;
        top: 0px;
        left: 0px;
    }
    :global(#header-trigger) {
        position: absolute;
        top: 0px;
        left: 0px;
    }
    h1 {
        color: white;
        text-shadow: 0 0 8px black;
        z-index: 1;
        transition: 0.25s;
        font-size: 36px;
        text-align: center;
        max-width: min(80%, 38ch);
        margin-top: max(27vh, calc(var(--header-height) + 30px));
        padding: 0 0 0rem;
    }
    h3 {
        color: white;
        text-shadow: 0 0 8px black;
        z-index: 1;
        transition: 0.25s;
        font-size: 1.7rem;
        text-align: center;
        max-width: min(80%, 38ch);
        margin-top: 0.2rem;
        padding: 0 0 6rem;
    }
    @media (max-width: 915px) {
        h1 {
            font-size: 30px;
        }
    }
    @media (max-width: 640px) {
        h1 {
            font-size: 23px;
            max-width: 90%;
            margin-top: max(30vh, calc(var(--header-height) + 35px));
        }
    }
</style>

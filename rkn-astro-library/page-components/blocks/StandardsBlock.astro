---
import TwoColumn from '../layout-components/TwoColumn.astro'
import { markedHelper } from '../util.js'
const props = Astro.props
---

<TwoColumn>
  <div id="standards" class="outer">
    <div class="inner">
      <h2>{props.title}</h2>
      <div set:html={markedHelper(props.shortDescription)} />
    </div>
  </div>
  <div class="secondOuter" slot="second">
    <ul>
      {
        props.standards.map((standard) => {
          return (
            <a href={standard.urlPath}>
              <li>{standard.name}</li>
            </a>
          )
        })
      }
    </ul>
  </div>
</TwoColumn>
<style>
  div.outer {
    background: var(--gunmetal);
    padding: 3rem 9vw;
    height: 100%;
    min-height: var(--two-column-min-height);
  }
  div.outer * {
    color: white;
  }
  div.inner {
    max-width: 700px;
    height: 100%;
  }
  h2 {
    margin-top: 0;
  }
  div.secondOuter {
    background: var(--light);
    height: 100%;
    padding: 3rem 5rem;
    min-height: var(--two-column-min-height);
  }
  a {
    color: var(--primary-color);
    font-family: var(--bold);
    font-size: var(--font-size-hero-p);
  }
  li {
    list-style: none;
    margin-bottom: 1.2rem;
  }
  @media (max-width: 1024px) and (min-width: 751px) {
    div.secondOuter {
      padding: 2rem 3rem;
    }
  }
  @media (max-width: 750px) {
    div.secondOuter {
      padding: 2rem 7vw 2rem 9vw;
    }
    div.outer {
      padding: 2rem 7vw 2rem 9vw;
    }
  }
</style>

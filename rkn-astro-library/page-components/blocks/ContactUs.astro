---
import { markedHelper } from '../util.js'
const props=Astro.props
---
<div class="wrapper">
  <a id={props.title.toLowerCase().split(" ").join("-")}></a>
  <div class="column">
    <h2>{props.title}</h2>
    <section set:html={markedHelper(props.contactDetails)}/>
    <img>
  </div>
  <div>
  <iframe
  class="responsive-iframe"
  src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d132636.55677041857!2d115.86291794897407!3d-31.92827556295094!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2a32b0137c26e495%3A0x1353267079bf9925!2s68%20Waverley%20St%2C%20Dianella%20WA%206059!5e0!3m2!1sen!2sau!4v1675942577477!5m2!1sen!2sau"
  style="border:0;"
  allowfullscreen=""
  loading="lazy"
  referrerpolicy="no-referrer-when-downgrade">
  </iframe>
  </div>
</div>
<style>
  div.wrapper {
    display: flex;
    margin: 0 auto;
  }
  div.column {
    display: flex;
    flex-direction: column;
    padding: 2rem;
    width: 33vw;
    align-items: center;
  }
  iframe {
    aspect-ratio: 4 / 3;
    height: auto;
    width: 33vw;
  }
</style>

---
//formerly 'full width'
import { markedHelper } from '../util.js'
const props = Astro.props
let textColor = 'white'
if (props.background === 'white' || !props.background) {
  textColor = 'black'
}
let backgroundColor = `var(--${props.background ?? 'white'})`
console.log('textColor', textColor)
---

<div class="full-width">
  <h2>{props.title}</h2>
  <div class="inner">
    <div set:html={markedHelper(props.body ?? 'Rohan was here')} />
  </div>
</div>
<style define:vars={{ textColor, backgroundColor }}>
  div.full-width {
    display: flex;
    flex-direction: column;
    justify-content: center;
    background-color: var(--backgroundColor);
    width: 100vw;
    padding: calc(30rem / 16);
  }
  div.full-width * {
    color: var(--textColor);
  }
  div.inner,
  h2 {
    margin: 0 auto;
    max-width: 700px;
  }
</style>

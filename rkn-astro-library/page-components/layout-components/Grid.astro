<ul class="gridComponent">
  <slot />
</ul>
<style>
  ul {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 20px;
    padding: 0 40px;
    margin: 20px 0;
    width: 100%;
  }
  ul.gridComponent > :global(li) {
    border: 2px solid #ffffff00;
  }
  ul.gridComponent > :global(li:hover),
  ul.gridComponent > :global(li:focus) {
    transform: scale(1.02);
    border: 2px solid var(--primary-color);
    outline: none;
  }
  @media (max-width: 1240px) {
    ul {
      grid-template-columns: repeat(4, 1fr);
      padding: 0 30px;
      margin: 20px 0;
    }
  }
  @media (max-width: 700px) {
    ul {
      grid-template-columns: 1fr 1fr;
      padding: 0 20px;
      margin: 20px 0;
    }
  }
</style>

---
//just requires image prop, can send through imageUri as fallback
import { strapiAsset } from '../util.js'
const image = Astro.props.image
const imageUrl = `url(${strapiAsset(
  image?.data?.attributes?.formats?.small?.url ?? image
)})`
---

<div class="image"></div>
<style define:vars={{ imageUrl }}>
  div.image {
    background-image: var(--imageUrl);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
    width: auto;
    min-height: var(--two-column-min-height);
    height: 100%;
  }
</style>
